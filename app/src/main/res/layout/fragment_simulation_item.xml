<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/button_background"
    android:orientation="horizontal"
    android:padding="20dp">

    <com.github.anastr.speedviewlib.PointerSpeedometer
        android:id="@+id/speed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/temperature"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sv_backgroundCircleColor="#00000000"
        app:sv_endDegree="400"
        app:sv_indicatorColor="@color/black"
        app:sv_markColor="@color/black"
        app:sv_maxSpeed="270"
        app:sv_pointerColor="@color/black"
        app:sv_speedTextColor="@color/black"
        app:sv_speedometerColor="@color/black"
        app:sv_startDegree="140"
        app:sv_textColor="@color/black"
        app:sv_unitTextColor="@color/black" />

    <com.github.anastr.speedviewlib.TubeSpeedometer
        android:id="@+id/temperature"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/speed"
        app:layout_constraintTop_toTopOf="parent"
        app:sv_endDegree="360"
        app:sv_maxSpeed="180"
        app:sv_speedTextPosition="BOTTOM_CENTER"
        app:sv_speedometerBackColor="@color/black"
        app:sv_speedometerWidth="20dp"
        app:sv_startDegree="180"
        app:sv_unit="Â°C" />

    <com.github.anastr.speedviewlib.TubeSpeedometer
        android:id="@+id/rpm"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/speed"
        app:layout_constraintTop_toBottomOf="@+id/temperature"
        app:sv_endDegree="360"
        app:sv_maxSpeed="12000"
        app:sv_speedTextPosition="BOTTOM_CENTER"
        app:sv_speedometerBackColor="@color/black"
        app:sv_speedometerWidth="20dp"
        app:sv_startDegree="180"
        app:sv_unit="RPM" />

    <TextView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rpm"
        app:layout_constraintStart_toStartOf="@+id/speed"
        app:layout_constraintTop_toBottomOf="@+id/speed" />

</androidx.constraintlayout.widget.ConstraintLayout>