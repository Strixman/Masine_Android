<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24292E"
    tools:context=".VehicleFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/obdButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/my_button"
        android:elevation="16dp"
        android:paddingHorizontal="5dp"
        android:fontFamily="@font/cera_pro_bold"
        android:text="foobar"
        android:textAllCaps="false"
        android:textColor="#24292E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/speedBackground"
        android:layout_width="0dp"
        android:layout_height="321dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/my_card"
        app:layout_constraintBottom_toTopOf="@+id/temperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehicleName" />

    <me.ibrahimsn.lib.Speedometer
        android:id="@+id/speedometer"
        android:layout_width="302dp"
        android:layout_height="288dp"
        android:layout_marginTop="32dp"
        app:borderColor="@color/backgroundLight"
        app:borderSize="14dp"

        app:fillColor="@color/primary"
        app:layout_constraintEnd_toEndOf="@+id/speedBackground"
        app:layout_constraintStart_toStartOf="@+id/speedBackground"
        app:layout_constraintTop_toTopOf="@+id/speedBackground"
        app:maxSpeed="130"
        app:metricText="km/h"
        app:textColor="#f5f5f5" />

    <com.github.anastr.speedviewlib.TubeSpeedometer
        android:id="@+id/temperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/my_card"
        android:padding="20dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/obdButton"
        app:layout_constraintEnd_toStartOf="@+id/rpm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speedBackground"
        app:sv_endDegree="360"
        app:sv_maxSpeed="170"
        app:sv_minSpeed="50"
        app:sv_speedometerBackColor="@color/backgroundLight"
        app:sv_speedTextColor="@color/white"
        app:sv_speedTextPosition="BOTTOM_CENTER"
        app:sv_speedometerWidth="20dp"
        app:sv_startDegree="180"
        app:sv_textColor="@color/white"
        app:sv_unit="Â°C"
        app:sv_unitTextColor="@color/white" />

    <com.github.anastr.speedviewlib.TubeSpeedometer
        android:id="@+id/rpm"
        android:layout_width="0dp"
        app:sv_speedometerBackColor="@color/backgroundLight"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/my_card"
        android:padding="20dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/obdButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/temperature"
        app:layout_constraintTop_toBottomOf="@+id/speedBackground"
        app:sv_endDegree="360"
        app:sv_maxSpeed="12000"
        app:sv_speedTextColor="@color/white"
        app:sv_speedTextPosition="BOTTOM_CENTER"
        app:sv_speedometerWidth="20dp"
        app:sv_startDegree="180"
        app:sv_textColor="@color/white"
        app:sv_unit="RPM"
        app:sv_unitTextColor="@color/white"
        app:sv_unitTextSize="12sp" />

    <TextView
        android:id="@+id/vehicleName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/my_card"
        android:fontFamily="@font/cera_pro_bold"
        android:padding="20dp"
        android:paddingBottom="0dp"
        android:text="foobar"
        android:textColor="#F7F8F9"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/speedBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>